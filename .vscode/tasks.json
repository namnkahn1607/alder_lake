{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-std=c++20",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Compiles the active file."
        },
        {
            "label": "build_and_run",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "/usr/bin/g++ -fdiagnostics-color=always -g -std=c++20 \"${file}\" -o \"${fileDirname}/${fileBasenameNoExtension}\" && \"${fileDirname}/${fileBasenameNoExtension}\""
            ],
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Compiles and runs the executable immediately."
        },
        {
            "label": "Run Current File (TSX)",
            "type": "shell",
            "command": "./node_modules/.bin/tsx",
            "args": [
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
            {
            "label": "Type Check Only",
            "type": "shell",
            "command": "./node_modules/.bin/tsc",
            "args": ["--noEmit"],
            "group": "build",
            "problemMatcher": "$tsc"
        }
    ]
}